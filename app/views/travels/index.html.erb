<h1>Listing travels</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Source city</th>
    <th>Dest city</th>
    <th>Cost</th>
    <th>Distance</th>
    <th>Duration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @travels.each do |travel| %>
  <tr>
    <td><%= travel.name %></td>
    <td><%= travel.source_city_id %></td>
    <td><%= travel.dest_city_id %></td>
    <td><%= travel.cost %></td>
    <td><%= travel.distance %></td>
    <td><%= travel.duration %></td>
    <td><%= link_to 'Show', travel %></td>
    <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
    <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

